title: HDP2 Salt Formula
description: Salt formula for installing components of Hortonworks Data Platform v2
root_path: hdp2
components:
  - title: NameNode
    description: Hadoop NameNode component of HDP2
    sls_path: hdp2.hadoop.namenode
  - title: DataNode
    description: Hadoop DataNode component of HDP2
    sls_path: hdp2.hadoop.datanode
  - title: ZooKeeper
    description: ZooKeeper component of HDP2
    sls_path: hdp2.zookeeper
  - title: HBase Master
    description: HBase Master component of HDP2
    sls_path: hdp2.hbase.master
  - title: HBase RegionServer
    description: HBase RegionServer component of HDP2
    sls_path: hdp2.hbase.regionserver
  - title: Oozie 
    description: Oozie
    sls_path: hdp2.oozie
  - title: Hue
    description: Hue
    sls_path: hdp2.hue
  - title: Pig
    description: Pig
    sls_path: hdp2.pig
  - title: Hive
    description: Hive
    sls_path: hdp2.hive

pillar_defaults:
  hdp2:
    version: 2.1.5.0
    utils_version: 1.1.0.19
    landing_page: true
    max_log_index: 1
    security:
      enable: false
    namenode:
      start_service: true
    datanode:
      start_service: true
    yarn:
      max_container_size_mb: 11264
    io:
      sort_factor: 25
      sort_mb: 250
    dfs:
      name_dir: /mnt/hadoop/hdfs/nn
      data_dir: /mnt/hadoop/hdfs/data
      permissions: true
    mapred:
      local_dir: /mnt/yarn
      system_dir: /hadoop/system/mapred
      reduce_tasks: 6
    hbase:
      start_service: true
      tmp_dir: /mnt/hbase/tmp
      log_dir: /mnt/hbase/logs
      replication: 3
      master_initial_heap: 1024m
      master_max_heap: 1024m
      master_young_gen: 256m
      region_initial_heap: 1024m
      region_max_heap: 1024m
      region_young_gen: 256m
      jute_maxbuffer: 1000000
      manage_zk: true
    zookeeper:
      data_dir: /mnt/zk/data
      start_service: true
    oozie:
      start_service: true
    zookeeper:
      start_service: true
      data_dir: /mnt/zk/data
    hive:
      start_service: true
      user: hive
      home: /usr/lib/hive
      metastore_password: CHANGE_THIS
