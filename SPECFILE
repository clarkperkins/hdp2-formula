title: HDP2 Salt Formula
description: Salt formula for installing components of Hortonworks Data Platform v2
root_path: hdp2
components:
  - title: Hadoop Client Node
    description: Hadoop Client Node
    sls_path: hdp2.hadoop.client
  - title: NameNode
    description: Hadoop NameNode component of HDP2
    sls_path: hdp2.hadoop.namenode
  - title: Standby NameNode
    description: Standby NameNode for high-availability
    sls_path: hdp2.hadoop.standby-namenode
  - title: JournalNode
    description: Hadoop JournalNode for high-availability
    sls_path: hdp2.hadoop.journalnode
  - title: DataNode
    description: Hadoop DataNode component of HDP2
    sls_path: hdp2.hadoop.datanode
  - title: Key Management Server
    description: Key Management Server for HDFS encryption-at-rest
    sls_path: hdp2.hadoop.kms
  - title: ZooKeeper
    description: ZooKeeper component of HDP2
    sls_path: hdp2.zookeeper
  - title: HBase Master
    description: HBase Master component of HDP2
    sls_path: hdp2.hbase.master
  - title: HBase RegionServer
    description: HBase RegionServer component of HDP2
    sls_path: hdp2.hbase.regionserver
  - title: HBase Secure Permissions
    description: Separate state because it needs to run on the master AFTER the regionservers are started.  Used only when security is enabled.
    sls_path: hdp2.hbase.security.permissions
  - title: Oozie 
    description: Oozie
    sls_path: hdp2.oozie
  - title: Oozie Client Node
    description: Oozie Client Node
    sls_path: hdp2.oozie.client
  - title: Hue
    description: Hue
    sls_path: hdp2.hue
  - title: Pig
    description: Pig
    sls_path: hdp2.pig
  - title: Hive
    description: Hive
    sls_path: hdp2.hive
  - title: Ambari Server
    description: Ambari Server
    sls_path: hdp2.ambari.server
  - title: Ambari Agent
    description: Ambari Agent
    sls_path: hdp2.ambari.agent

pillar_defaults:
  hdp2:
    version: 2.4.0.0
    ambari:
      version: 2.2.1.0
    landing_page: true
    max_log_index: 1
    encryption:
      enable: false
      certificate: CHANGE_ME
      private_key: CHANGE_ME
    security:
      enable: false
    namenode:
      start_service: true
    datanode:
      start_service: true
    yarn:
      max_container_size_mb: 11264
      num_cpus: 8
      local_dirs: /mnt/hadoop/yarn/local
      log_dirs: /mnt/hadoop/yarn/logs
      max_completed_applications: 5000
    io:
      sort_factor: 64
      sort_mb: 256
    dfs:
      name_dir: /mnt/hadoop/hdfs/nn
      checkpoint_dir: /mnt/hadoop/hdfs/snn
      data_dir: /mnt/hadoop/hdfs/dn
      journal_dir: /mnt/hadoop/hdfs/jn
      du_reserved: 5368709120  # 5GB
      permissions: true
      block_size: 268435456
      replication: 3
    mapred:
      system_dir: /hadoop/system/mapred
      memory_mb: 2048
      reduces: 3
      metainfo_maxsplit: 10000000
    hbase:
      start_service: true
      tmp_dir: /mnt/hbase/tmp
      log_dir: /mnt/hbase/logs
      java_stack_size: 8096k
      master_initial_heap_mb: 1024
      master_max_heap_mb: 1024
      master_young_gen_mb: 256
      region_initial_heap_mb: 1024
      region_max_heap_mb: 1024
      region_young_gen_mb: 256
      jute_maxbuffer: 1000000
      manage_zk: false
    zookeeper:
      data_dir: /mnt/zk/data
      start_service: true
    oozie:
      start_service: true
      max_log_index: 168  # 1 week
    zookeeper:
      start_service: true
      data_dir: /mnt/zk/data
    hive:
      start_service: true
      user: hive
      home: /usr/lib/hive
      metastore_password: CHANGE_THIS
    hue:
      start_service: true
      secret_key: CHANGE_THIS
